/* 刘德苟自定义样式模板1 */

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.section-title {
  font-size: 13pt;
  width: 50%;
  color: #32a189;
  text-align: left;
}

.border {
  border: 1px solid rgb(239, 239, 244);
  background-color: white;
  border-radius: 20rpx;
}

.section {
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.underline {
  border-bottom: 1px solid rgb(239, 239, 244);
}

.arrow-r {
  width: 9rpx;
  height: 17rpx;
  margin-left: 12rpx;
}

.mt20 {
  margin-top: 20rpx;
}

.section-big {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  padding: 20rpx 40rpx;
  margin-top: 20rpx;
}

.border {
  border: 1px solid white;
  background-color: white;
  border-radius: 20rpx;
}

.border2 {
  border-top: 1px solid white;
  background-color: white;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.section-title2 {
  font-size: 11pt;
  width: 50%;
  color: #32a189;
  text-align: left;
}

.input {
  width: 100%;
  overflow: hidden;
  font-size: 11pt;
  color: #353535;
  text-align: left;
}

.width {
  width: 100%;
}

.inputStyle {
  color: #888;
  font-size: 11pt;
}

.section-swiper {
  width: 100%;
  height: 380rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.btn-left-hover {
  opacity: 0.3;
}

.btn-right-hover {
  opacity: 0.3;
}

.btn-left {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 13pt;
  color: #32a189;
  background-color: #efeff4;
  margin-left: 0rpx;
}

.btn-right {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 13pt;
  color: white;
  background-color: #32a189;
  margin-right: 0rpx;
}

