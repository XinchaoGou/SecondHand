/* pages/detail/detail.wxss */
@import '/style/secondhand.wxss';

page {
  width: 100%;
  height:100%;
  background-color: #efeff4;
}

.section2 {
  width: 100%;
  height: 860rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.height {
  height: 1100rpx;
}

.textarea {
  display: block; /*textarea组件是行内元素，这里强制修改为块级元素,行内元素有自己的独立空间，它是依附于其他块级元素存在的，因此，对行内元素设置高度、宽度、内外边距等属性，都是无效的。*/
  width: 100%;
  height: 800rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  font-size: 11pt;
  color: #353535;
  line-height: 1.5em;
  overflow: scroll;
}

.chnumber {
  position: absolute;
  right: 20rpx;
  bottom: 0;
  color: #b2b2b2;
  font-size: 11pt;
}

.container3 {
  width: 100%;
  height:100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items:stretch;
}
.section-big3 {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 20rpx 40rpx;
  margin-top: 20rpx;
  padding-bottom: 0rpx;
  margin-bottom:20rpx;
}
