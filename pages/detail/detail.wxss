/* pages/detail/detail.wxss */
@import '/style/secondhand.wxss';

page{
  width:100%;
  background-color:rgb(239,239,244);
}

.section2{
  width:100%;
  height: 950rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position:relative;
}
.textarea{
  display:block; /*textarea组件是行内元素，这里强制修改为块级元素,行内元素有自己的独立空间，它是依附于其他块级元素存在的，因此，对行内元素设置高度、宽度、内外边距等属性，都是无效的。*/
  width:100%;
  height:850rpx;
  position:absolute;
  top:0rpx;
  left:0rpx;
  font-size:11pt;
  color:#353535;
  line-height: 1.5em;
}
.chnumber{
  position:absolute;
  right:20rpx;
  bottom:0;
  color:#b2b2b2;
  font-size:11pt;
}

