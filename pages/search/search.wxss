/* pages/search/search.wxss */
.container {
  height: 100%;
  background-color:rgb(239, 239,244);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
  padding: 20rpx 0;
  box-sizing: border-box;
} 

.header{
  width:100%;
  height:70rpx;
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  box-sizing: border-box;
}
.header-block1{
  width:85%;
  height:70rpx; 
  padding-left:20rpx;
  background-color:white;
  border-radius:10rpx;
  display: flex;
  flex-direction:row;
  justify-content:flex-start;
  align-items:center;
}

.header-block2{
  width:15%; 
}

.text{
  color: #b2b2b2;
  font-size:11pt;
}
.icon{
  width:80rpx;
  height:80rpx;
}
.content{
  width:100%;
}
.content-item{
  width:100%;
  height:240rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color:white;
  border-radius:20rpx;
  margin-top:20rpx;
  margin-bottom:20rpx;
  box-sizing: border-box;
  padding:3%;
}


.content-block2{
  width:50%;
  height:200rpx;
  display:flex;
  flex-direction: column;
  align-items:flex-start;
  justify-content: space-between;
}
.content-text-title{
  font-size:11pt;
  color:#32A189;
}
.content-text-location{
  font-size:9pt;
  color:"#888888";
  width:80pt;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.content-text-offertime{
  font-size:9pt;
  color:"#888888";
}
.content-text-price{
  font-size:10pt;
}
.location-time{
  display:flex;
  flex-direction:column;
  justify-content:flex-start;
}/*问题：是否这里可以采用text-align来达到相同的效果*/
.content-bottom{
  width:90%;
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:flex-end;
}

