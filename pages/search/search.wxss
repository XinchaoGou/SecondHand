/* pages/search/search.wxss */
@import '/style/secondhand2.wxss';

page{
  width:100%;
  height: 100%;
  background-color:rgb(239, 239,244);
}
.container {
  width:100%;
  display:flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  box-sizing: border-box;
} 
.header{
  width:100%;
  padding:20rpx;
  padding-top:25rpx;
  padding-bottom:0rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
}
.header-block1{
  width:85%;
  height:80rpx; 
  padding-left:20rpx;
  background-color:white;
  border-radius:10rpx;
  display: flex;
  flex-direction:row;
  justify-content:flex-start;
  align-items:center;
}

.header-block2{
  width:15%; 
  height:80rpx; 
  display: flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
}
.text-block{
  padding-left:20rpx;
  display: flex;
  flex-direction:column;
  justify-content:space-around;
  align-items:flex-start;
}
.text{
  color:#353535;
  font-size:11pt;
}
.text2{
  color:#353535;
  font-size:9pt;
}
.icon{
  width:80rpx;
  height:80rpx;
}
.content{
  width:100%;
}
.content-item{
  width:100%;
  height:240rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color:white;
  border-radius:20rpx;
  margin-bottom:20rpx;
  box-sizing: border-box;
  padding:20rpx;
}

.content-bottom{
  width:90%;
  position:relative;
}

/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

/*yining*/
.loadingNum{
  padding-left:20rpx;
  padding-bottom:10rpx;
}
.loading-text{
  font-size:11pt;
  color:gray;
}
.loading-text1{
  font-size:9pt;
  color:gray;
}
.weui-load{
  width: 100%;
  text-align: center;
}
.loading{
  width:50rpx;
  height:50rpx;
}



