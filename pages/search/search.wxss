/* pages/search/search.wxss */
.container {
  height: 100%;
  background-color:rgb(239, 239,244);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
  box-sizing: border-box;
} 

.header{
  width:100%;
  padding:20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
}
.header-block1{
  width:85%;
  height:80rpx; 
  padding-left:20rpx;
  background-color:white;
  border-radius:10rpx;
  display: flex;
  flex-direction:row;
  justify-content:flex-start;
  align-items:center;
}

.header-block2{
  width:15%; 
  height:80rpx; 
  display: flex;
  flex-direction:column;
  justify-content:flex-start;
  align-items:center;
}

.text{
  color: #b2b2b2;
  font-size:11pt;
}
.icon{
  width:80rpx;
  height:80rpx;
}
.content{
  width:100%;
}
.content-item{
  width:100%;
  height:240rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color:white;
  border-radius:20rpx;
  margin-top:20rpx;
  margin-bottom:20rpx;
  box-sizing: border-box;
  padding:3%;
}


.content-block2{
  width:50%;
  height:200rpx;
  display:flex;
  flex-direction: column;
  align-items:flex-start;
  justify-content: space-between;
}
.content-text-title{
  font-size:11pt;
  color:#32A189;
}
.content-text-location{
  font-size:9pt;
  color:"#888888";
  width:80pt;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.content-text-offertime{
  font-size:9pt;
  color:"#888888";
}
.content-text-price{
  font-size:10pt;
}
.location-time{
  display:flex;
  flex-direction:column;
  justify-content:flex-start;
}/*问题：是否这里可以采用text-align来达到相同的效果*/
.content-bottom{
  width:90%;
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:flex-end;
}
.location-text{
  font-size:5pt;
}

/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

