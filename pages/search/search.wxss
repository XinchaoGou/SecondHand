.container {
  height: 100%;
  background-color:rgb(239, 239,244);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding: 15px 0;
  box-sizing: border-box;
} 

.header{
  width:60%;
  height:35px;
  display: flex;
  background-color:white;
  flex-direction:row;
  justify-content: space-between;
  align-items:center;
 
  
}
.header-block1{
  width:15%;
  padding-left:5%;
  
}
.header-block2{
  width:70%;
  display: flex;
  flex-direction:column;
  justify-content: space-around;
}

.header-block3{
  width:15%; 
}

.top-text{
  color: #888888;
  font-size:11pt;
}
.bottom-text{
  color:#888888;
  font-size:9pt;
}
.icon{
  width:80rpx;
  height:80rpx;
}
.content{
  width:100%;
}
.content-item{
  width:100%;
  height:120px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
