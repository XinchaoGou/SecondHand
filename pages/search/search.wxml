<!--pages/search/search.wxml-->
<view class="container">

  <view class="header">
    <!--头部搜索-->
    <!--头部搜索block1-->
    <view class="header-block1" bindtap="tosubsearch">
      <image style="height:25px;width:25px"src="../../images/test/search.png" />
      <text class="top-text" style="padding-left:10px">所有种类</text>
    </view>

    <view class="header-block2"><!--头部搜索block2-->
        <image style="height:40px;width:40px"src="../../images/test/location.png" />
    </view>

  </view>

  <view class="content">
    <!--二手信息加载区域-->
    <view class="content-item" wx:for="{{contentItems}}">
      <view class="content-block1">
        <image style="height:100px; width:150px;border-radius:5px;" src='../../images/test/drucker.jpg' />
      </view>

      <view class="content-block2">
        <text class='content-text-title'>二手打印机</text>
        <view>
          <text class='content-text-location'>卡尔斯鲁厄市中心</text>
          <text class='content-text-offertime'>刚刚</text>
        </view>
        <text class='content-text-price'>30欧</text>
      </view>
    </view>
  </view>

</view>