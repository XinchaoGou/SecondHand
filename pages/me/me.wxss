/* pages/me/me.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: rgb(239, 239, 244);
}

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/*头像--背景样式，引入*/

.head-background {
  height: 400rpx;
  margin-top: -40rpx;
  width: 100%;
  -webkit-filter: blur(5px);
  -moz-filter: blur(5px);
  -o-filter: blur(5px);
  -ms-filter: blur(5px);
  filter: blur(5px);
  position: relative;
}

.leftArrow {
  width: 22rpx;
  height: 38rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  float: left;
}

.bell {
  width: 38rpx;
  height: 46rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
  float: right;
}

/*头像--图片样式 引入*/

.userinfo-bgImg {
  width: 100%;
  height: 400rpx;
}

/*用户信息--背景样式 引入*/

.userinfo {
  width: 100%;
  height: 80rpx;
  background: rgb(239, 239, 244);
  margin-top: -7rpx;
  padding-bottom: 15rpx;
}

/*用户信息--图片样式 引入*/

.userinfo-avatar {
  position: absolute;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  border-radius: 50%;
  margin-top: -80rpx;
  margin-bottom: 0;
}

/*用户信息--昵称--文字样式 引入*/

.userinfo-nickname {
  font-size: 13pt;
  color: #32a189;
  padding: 24rpx 20rpx 0 200rpx;
  float: left;
}

/*用户信息--昵称--文字样式 该样式引入*/

.userProfile {
  width: 60%;
  float: left;
  font-size: 24rpx;
  color: #666;
  margin-top: 12rpx;
}

.usermotto {
  width: 100%;
  height: 144rpx;
  background-color: white;
}

.edit {
  width: 40rpx;
  height: 40rpx;
  padding: 24rpx 20rpx 0 20rpx;
  float: left;
}

.myNumber {
  width: 100rpx;
  height: 100rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  display: block;
  float: left;
}

.user-number {
  float: left;
  margin-left: 24rpx;
  font-size: 26rpx;
  line-height: 148rpx;
  font-family: PingFangSC-Regular;
  color: #555;
}

.number {
  float: left;
  margin-left: 12rpx;
  line-height: 148rpx;
  color: red;
}

.userItem {
  width: 100%;
  height: 90rpx;
  border-top: 1px solid rgb(239, 239, 244);
  background-color: white;
  position: relative;
  border-radius: 20rpx;
  margin-top: 20rpx;
}

.userItemImg {
  width: 40rpx;
  height: 40rpx;
  left: 20rpx;
  top: 24rpx;
  position: absolute;
}

.text {
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userItemText {
  margin-left: 70rpx;
  font-size: 11pt;
  color: #32a189;
}

.userItemArrow {
  width: 16rpx;
  height: 26rpx;
  float: right;
  top: 36rpx;
  right: 34rpx;
  position: absolute;
}

.userItemArrow1 {
  width: 40rpx;
  height: 35rpx;
  float: right;
  top: 36rpx;
  right: 24rpx;
  position: absolute;
}

.foot {
  width: 100%;
  height: 160rpx;
  position: relative;
}

.setting {
  position: absolute;
  height: 40rpx;
  width: 40rpx;
  right: 10rpx;
}

.delete {
  position: absolute;
  height: 40rpx;
  width: 40rpx;
  right: 10rpx;
}

/*以下从search页面移植过来的样式*/

.content {
  width: 100%;
  min-height: 300rpx;
  padding: 20rpx;
  padding-top: 0rpx;
  padding-bottom:0rpx;
  background-color: white;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.content-item {
  width: 100%;
  height: 260rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  justify-content: space-between;
  box-sizing: border-box;
  border: 4rpx solid rgb(239, 239, 244);
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  background-color: rgb(239, 239, 244);
}

.content-block2 {
  width: 50%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  position: relative;
}

.content-text-title {
  font-size: 11pt;
  color: #32a189;
}

.content-text-location {
  font-size: 9pt;
  color: "#888888";
  width: 80pt;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.content-text-offertime {
  font-size: 9pt;
  color: "#888888";
}

.content-text-price {
  font-size: 10pt;
}

.location-time {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/*问题：是否这里可以采用text-align来达到相同的效果*/

.content-bottom {
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}

.location-text {
  font-size: 6pt;
}

.favourite {
  position: absolute;
  right: 10rpx;
  bottom: -10rpx;
}

/*以上是从search页面移植过来的样式*/
