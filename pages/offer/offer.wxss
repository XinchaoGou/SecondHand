}

.add_pic {
  font-size:11pt;
}

.add_pic view {
  margin-top: 20rpx;
  width: 180rpx;
  height: 180rpx;
  line-height: 200rpx;
  text-align: center;
  background: url(http://bmob-cdn-14867.b0.upaiyun.com/2017/11/23/e93d28a14095af18801d3c1c68e08fe7.png) no-repeat left center;
  background-size: 160rpx auto;
  padding-left: 80rpx;
