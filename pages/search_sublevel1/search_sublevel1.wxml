<!--pages/search/search.wxml-->
<view class="container">


  <view class="section-big style1">
    <!--地理范围显示模块-->
    <view class="section">
      <text class="section-title">所在城市</text>
    </view>

    <view class="section underline">
      <picker mode="multiSelector" bindchange="bindMultiPickerChange1" bindcolumnchange="bindMultiPickerColumnChange1" value="{{multiCityIndex}}" range="{{multiCityArray}}">
        <view class="text-title" name="types">{{multiCityArray[0][multiCityIndex[0]]}} {{multiCityArray[1][multiCityIndex[1]]}} {{multiCityArray[2][multiCityIndex[2]]}}
        </view>
      </picker>
      <image class="arrow-r" src="../../images/more/enter.png" />
    </view>

    <view class="section">
      <text class="section-title">类别</text>
    </view>

    <view class="section underline">
      <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
        <view class="text-title" name="types">{{multiArray[0][multiIndex[0]]}} {{multiArray[1][multiIndex[1]]}} {{multiArray[2][multiIndex[2]]}}
        </view>
      </picker>
      <image class="arrow-r" src="../../images/more/enter.png" />
    </view>

    <view class="section t-name">
      <view>
        <text class="section-title">设置价格区间</text>
      </view>
      <switch type="switch" color="#32A189" bindchange="switch1Change" name="switchHide" />
    </view>


    <view wx:if="{{priceHide}}" class="section">
      <view class="body-view">
        <slider activeColor="#32A189" block-color="#32A189" step="10" bindchange="slider4change" min="50" max="200" />
      </view>
      <text class="euro">20~50€</text>
    </view>

    <view class="section underline">
      <text class="section-title">排列顺序</text>
      <picker class="section-right" bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
        <text class="text-title">{{array[index]}}</text>
        <image class="arrow-r" src="../../images/more/enter.png" />
      </picker>
    </view>
  </view>

</view>